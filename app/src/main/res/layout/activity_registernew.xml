<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.haahoo.haahooshop.Register">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:fillViewport="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"
                android:background="@drawable/register_shape">

                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/image"
                    android:textColor="#fff"
                    android:layout_marginTop="10dp"
                    android:layout_height="170dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical|center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/abril_fatface"
                android:gravity="center_vertical|center_horizontal"
                android:text="REGISTER"
                android:textColor="#5C25B7"
                android:textSize="22sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    >

                    <RelativeLayout

                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">



                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="10dp"
                            android:background="@null"
                            android:textSize="15sp"
                            android:id="@+id/owner"
                            android:hint="Enter the name"
                            android:layout_marginLeft="10dp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    >

                    <RelativeLayout
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:enabled="false"
                            android:id="@+id/phone"
                            android:textSize="15sp"
                            android:layout_marginStart="10dp"
                            android:background="@null"
                            android:inputType="number"
                            android:maxLength="10"
                            android:hint="Enter the PhoneNumber"
                            android:layout_marginLeft="10dp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    >

                    <RelativeLayout
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:id="@+id/email"
                            android:textSize="15sp"
                            android:layout_marginStart="10dp"
                            android:background="@null"
                            android:hint="Enter the Email"
                            android:layout_marginLeft="10dp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>




                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    >

                    <RelativeLayout
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="10dp"
                            android:background="@null"
                            android:inputType="textPassword"
                            android:textSize="15sp"
                            android:id="@+id/password"
                            android:hint="Choose Your Password"
                            android:layout_marginLeft="10dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/show"
                            android:textSize="12sp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="15dp"
                            android:gravity="center_vertical|center_horizontal"
                            android:textAlignment="center"
                            android:text="Show"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/hide"
                            android:layout_alignParentRight="true"
                            android:visibility="gone"
                            android:layout_marginRight="20dp"
                            android:textSize="12sp"

                            android:layout_marginTop="15dp"
                            android:gravity="center_vertical|center_horizontal"
                            android:textAlignment="center"
                            android:text="Hide"
                            />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    >

                    <RelativeLayout
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="10dp"
                            android:background="@null"
                            android:textSize="15sp"
                            android:inputType="number"
                            android:id="@+id/empID"
                            android:hint="Enter employee ID (Optional) "
                            android:layout_marginLeft="10dp" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="2"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="250dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        app:cardCornerRadius="20sp"
                        android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textAllCaps="true"
                    android:inputType="textCapCharacters"
                    android:textSize="15sp"
                    android:backgroundTint="@color/white"
                    android:id="@+id/promo"
                    android:hint="  Apply Promo code"
                    android:textColor="#000"
                    />
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                      android:id="@+id/appre"

                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginEnd="5dp"
                            app:cardCornerRadius="22dp"
                            android:layout_marginTop="20dp"
                            >

                <TextView
                    android:layout_width="match_parent"
                    android:text="Apply"
                    android:background="@drawable/applygrad"
                    android:textColor="#5c25b7"
                    android:textStyle="bold"
                    android:id="@+id/app"
                    android:gravity="center"
                    android:layout_height="40dp"/>

                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:id="@+id/remre"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginEnd="5dp"
                            app:cardCornerRadius="22dp"
                            android:layout_marginTop="20dp"
                            >

                    <TextView
                        android:layout_width="match_parent"
                        android:background="@drawable/remgrad"
                        android:text="Remove"
                        android:textColor="#5C25B7"

                       android:textStyle="bold"

                        android:id="@+id/rem"

                        android:gravity="center"
                        android:layout_height="40dp"/>

                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>

                </LinearLayout>


                    <TextView
                        android:layout_width="300dp"
                        android:layout_below="@+id/promo"
                        android:text=""
                        android:textColor="#5C25B7"
                        android:layout_marginTop="0dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:id="@+id/sta"
                        android:gravity="center"
                        android:layout_height="wrap_content"/>






                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="20sp"
                    app:cardBackgroundColor="#5c25b7"

                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/submit"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="Register"
                        android:textColor="#fff"
                        android:textSize="20sp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</LinearLayout>