<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context="com.haahoo.haahooshop.MainUI">    <RelativeLayout        android:layout_width="wrap_content"        android:id="@+id/re"        android:layout_height="wrap_content">        <TextView            android:layout_width="match_parent"            android:layout_height="60dp"            android:text="View Order History"            android:gravity="center_horizontal|center_vertical"            android:textSize="20sp"            android:textColor="#fff"            android:background="#5c25b7"            />        <ImageView            android:layout_width="28dp"            android:layout_height="60dp"            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"            android:id="@+id/back"            android:layout_centerVertical="true"            android:layout_marginStart="5dp"            android:layout_marginLeft="5dp" />    </RelativeLayout>    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:id="@+id/rt"        android:layout_centerHorizontal="true"        android:layout_below="@+id/re">        <LinearLayout            android:layout_width="match_parent"            android:orientation="horizontal"            android:layout_height="wrap_content">            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="wrap_content">              <!--  <SearchView                    android:id="@+id/search"                    android:layout_width="wrap_content"                    android:clickable="false"                    android:queryHint="Search by date"                    android:layout_height="wrap_content"                    android:iconifiedByDefault="false">                    <requestFocus />                </SearchView>-->                <TextView                    android:layout_width="300dp"                    android:layout_height="50dp"                    android:id="@+id/search"                    android:hint="    Search By Date"                    android:textColorHint="#000"                    android:textColor="#000"                    android:gravity="center_vertical"                    android:layout_marginStart="20sp"                    android:drawableLeft="@drawable/searchn"/>                <ImageView                    android:layout_width="25dp"                    android:id="@+id/imgj"                    android:layout_height="30dp"                    android:layout_marginTop="10dp"                    android:src="@drawable/nav"                    android:layout_marginStart="20dp"                    android:layout_toEndOf="@+id/search"/>                <androidx.recyclerview.widget.RecyclerView                    android:id="@+id/list"                    android:layout_marginTop="10dp"                    android:layout_below="@+id/search"                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    />            </RelativeLayout>        </LinearLayout>    </RelativeLayout></RelativeLayout>