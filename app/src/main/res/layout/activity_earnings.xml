<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.haahoo.haahooshop.MainUI">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/re"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="View Earnings"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="20sp"
            android:textColor="#fff"
            android:background="#5c25b7"
            />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:id="@+id/back"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp" />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rt"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/re">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textSize="20dp"
                    android:layout_marginStart="100dp"
                    android:id="@+id/text"
                    android:textStyle="bold"
                    android:textColor="@color/blu"
                    android:text="Total Earnings   : ">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textSize="20dp"
                    android:layout_toEndOf="@+id/text"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="70dp"
                    android:id="@+id/tex"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:text="Total">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/tex"
                    android:layout_marginEnd="100dp"
                    android:background="#5C25B7"
                    android:layout_marginTop="10dp"
                    android:text="Withdraw Earnings"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:layout_marginStart="100dp"
                    android:id="@+id/texx"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list"
                    android:layout_below="@+id/texx"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />




            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>






</RelativeLayout>