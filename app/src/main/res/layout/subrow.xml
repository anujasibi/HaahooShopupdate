<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Spec 1"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/black"
        android:id="@+id/spec1"
        >

    </TextView>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/spec1"
        android:id="@+id/value"
        android:layout_marginStart="10dp"
        android:hint="Enter the Amount "
        android:inputType="number"
        android:layout_toRightOf="@+id/spec1"
        android:layout_marginLeft="10dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:id="@+id/carde"
        android:layout_below="@+id/value"
        android:layout_toEndOf="@+id/spec1"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="20dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/terrrr"
                android:textColor="#000"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="Enter the benefits"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/des"
                android:layout_below="@+id/terrrr"
                android:background="@drawable/custom_button"
                android:textAlignment="center"
                android:hint="Add the Benefits here"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>






    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/carde"
        android:text="Successfully Added"
        android:id="@+id/remove"
        android:textStyle="bold"
        android:visibility="gone"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textColor="#5C25B7"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/carde"
        android:layout_marginTop="15dp"
        android:text="Click here add the subscription plan"
        android:id="@+id/apply"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#5C25B7"
        android:layout_marginBottom="20dp"/>


</RelativeLayout>