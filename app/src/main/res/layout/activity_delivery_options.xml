<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.haahoo.haahooshop.AddProduct">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="Add Product"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textColor="#fff"
                        android:gravity="center_horizontal|center_vertical"
                        android:background="#5c25b7"
                        />
                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="28dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_arrow_back_black_24dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp" />

                </RelativeLayout>






                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginEnd="3dp"
                    android:layout_marginTop="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="33dp"
                    android:layout_marginRight="3dp">
                    <TextView
                        android:id="@+id/yup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:text="Delivery Type"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="15sp" />



                    <RadioGroup
                        android:id="@+id/radioSex"
                        android:layout_below="@+id/yup"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <RadioButton
                            android:id="@+id/radioMale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Express Delivery"
                            android:textSize="12sp"
                            android:checked="true" />

                        <RadioButton
                            android:id="@+id/radioFemale"
                            android:layout_width="wrap_content"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:text="HaaHoo Delivery" />
                        <RadioButton
                            android:id="@+id/radioFe"
                            android:layout_width="wrap_content"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:text="Custom Delivery" />
                        <RadioButton
                            android:id="@+id/radioF"
                            android:layout_width="wrap_content"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:text="Pick from Shop" />




                    </RadioGroup>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                       android:layout_below="@+id/radioSex"
                        android:hint="Enter the Expected Time(for eg: 4PM - 5PM)"
                        android:textSize="12sp"
                       android:visibility="gone"
                        android:layout_margin="20dp"
                        android:id="@+id/datt"/>

                    <EditText
                        android:id="@+id/etChooseTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/radioSex"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="15dp"
                        android:visibility="gone"
                        android:textSize="12dp"
                        android:focusableInTouchMode="false"
                        android:layout_centerVertical="true"
                        android:hint="Choose the Expected Time" />



                    <EditText
                        android:id="@+id/editText1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:ems="10"
                        android:visibility="gone"
                        android:textSize="12sp"
                        android:layout_below="@+id/etChooseTime"
                        android:hint="Choose the Expected Date" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_margin="15dp"
                        android:layout_below="@+id/datt"
                        android:id="@+id/ln"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        >



                        <Spinner
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:id="@+id/spinner"
                            android:layout_marginBottom="5dp"
                            android:layout_height="30dp">

                        </Spinner>

                    </LinearLayout>



                </RelativeLayout>






                <TextView
                    android:id="@+id/save"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="#5C25B7"
                    android:gravity="center_vertical"
                    android:text="Continue"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="15sp" />



            </LinearLayout>



        </ScrollView>

    </LinearLayout>

</RelativeLayout>