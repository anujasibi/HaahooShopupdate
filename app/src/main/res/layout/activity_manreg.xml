<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent"
    android:background="#5C25B7"
    tools:context="com.haahoo.haahooshop.choose">





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Manufacture Details"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="670dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="20dp"
            android:layout_alignParentBottom="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/submit"
                    android:layout_below="@+id/lk"
                    android:layout_margin="10dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/right" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:id="@+id/csh"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="20dp"
                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">



                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:id="@+id/shopname"
                            android:layout_marginStart="10dp"
                            android:background="@null"
                            android:hint="Enter Manufacture Name"
                            android:layout_marginLeft="10dp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/csh"
                    android:id="@+id/cow"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="20dp"
                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">



                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginStart="10dp"
                            android:background="@null"
                            android:id="@+id/owner"
                            android:hint="Name of owner"
                            android:layout_marginLeft="10dp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/pin"
                    android:id="@+id/cgs"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="20dp"
                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:id="@+id/gst"
                            android:layout_marginStart="10dp"
                            android:background="@null"
                            android:hint="Enter GST number"
                            android:layout_marginLeft="10dp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/cgs"
                    android:id="@+id/upi"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="20dp"
                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:id="@+id/upiid"
                            android:layout_marginStart="10dp"
                            android:background="@null"
                            android:hint="Enter UPI ID (Optional)"
                            android:layout_marginLeft="10dp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/dis"
                    android:id="@+id/pin"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="20dp"
                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:id="@+id/pinc"
                            android:layout_marginStart="10dp"
                            android:background="@null"
                            android:inputType="number"
                            android:maxLength="6"
                            android:hint="Enter the Pincode"
                            android:layout_marginLeft="10dp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/cow"
                    android:id="@+id/cad"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="20dp"
                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:id="@+id/des"
                            android:background="@drawable/custom_button"
                            android:textAlignment="center"
                            android:hint="Add Your Complete Address"
                            />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginStart="33dp"
                    android:layout_marginEnd="3dp"
                    android:layout_below="@+id/cad"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="33dp"
                    android:id="@+id/dis"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="3dp">

                    <Spinner
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:id="@+id/spinnerd"
                        android:layout_marginBottom="5dp"
                        android:layout_height="50dp">

                    </Spinner>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginStart="33dp"
                    android:layout_marginEnd="3dp"
                    android:layout_below="@+id/upi"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="33dp"
                    android:id="@+id/lk"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="3dp">

                    <Spinner
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:id="@+id/spinner"
                        android:layout_marginBottom="5dp"
                        android:layout_height="50dp">

                    </Spinner>

                </LinearLayout>



            </RelativeLayout>




        </androidx.cardview.widget.CardView>


    </RelativeLayout>


</ScrollView>