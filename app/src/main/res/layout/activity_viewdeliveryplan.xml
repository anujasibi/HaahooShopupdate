<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewdeliveryplan">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/re"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Delivery Plans"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textColor="#fff"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="#5c25b7"
                    />
                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="28dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp" />
            </RelativeLayout>




            <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="20dp"
                android:layout_below="@+id/re"
                android:id="@+id/card"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/gray"
        android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Default Charge"
                    android:id="@+id/def"
                    android:layout_margin="10dp"
                    android:textStyle="bold"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Default Charge"
                    android:id="@+id/defcharge"
                    android:layout_margin="10dp"
                    android:layout_toEndOf="@+id/def"
                    android:textStyle="bold"
                    android:textColor="#5c25b7"
                    android:textSize="12sp"/>

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Free delivery distance"
                        android:id="@+id/deff"
                        android:layout_margin="10dp"
                        android:layout_below="@+id/def"
                        android:textStyle="bold"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Default Charge"
                        android:layout_margin="10dp"
                        android:layout_toEndOf="@+id/deff"
                        android:layout_below="@+id/def"
                        android:textStyle="bold"
                        android:textColor="#5c25b7"
                        android:id="@+id/freedis"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Minimum Cart Value(Based on Distance)"
                        android:id="@+id/defff"
                        android:layout_below="@+id/deff"
                        android:layout_margin="10dp"
                        android:textStyle="bold"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Default Charge"
                        android:layout_margin="10dp"
                        android:layout_toEndOf="@+id/defff"
                        android:layout_below="@+id/deff"
                        android:id="@+id/freediscart"
                        android:textStyle="bold"
                        android:textColor="#5c25b7"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Minimum Cart Value(Based on Order)"
                        android:id="@+id/deffff"
                        android:layout_below="@+id/defff"
                        android:layout_margin="10dp"
                        android:textStyle="bold"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Default Charge"
                        android:layout_margin="10dp"
                        android:id="@+id/freeordcart"
                        android:layout_toEndOf="@+id/deffff"
                        android:layout_below="@+id/defff"
                        android:textStyle="bold"
                        android:textColor="#5c25b7"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Delivery Price Outside the free delivery"
                        android:id="@+id/defffff"
                        android:layout_below="@+id/deffff"
                        android:layout_margin="10dp"
                        android:textStyle="bold"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Default Charge"
                        android:id="@+id/out"
                        android:layout_margin="10dp"
                        android:layout_toEndOf="@+id/defffff"
                        android:layout_below="@+id/deffff"
                        android:textStyle="bold"
                        android:textColor="#5c25b7"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="Edit"
                        android:textAlignment="center"
                        android:background="@drawable/applygrad"
                        android:id="@+id/edit"
                        android:layout_margin="10dp"
                        android:layout_below="@+id/out"
                        android:layout_alignParentRight="true"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:textColor="#5C25B7"
                        android:textSize="12sp"/>
                </RelativeLayout>






    </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Add Delivery Plan"
                android:id="@+id/add"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/card"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:textAlignment="center"
                android:background="#5c25b7"
                android:gravity="center_vertical"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="12sp"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>