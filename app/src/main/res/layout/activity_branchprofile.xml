<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.haahoo.haahooshop.profile">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/re"
                android:layout_height="250dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/io"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/back"/>
                <ImageView
                    android:id="@+id/base"
                    android:layout_height="250dp"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"

                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true" />

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/img"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    app:civ_border_width="5dp"
                    app:civ_border_color="#fff"/>

                <ImageView
                    android:layout_width="20dp"
                    android:id="@+id/imgg"
                    android:layout_height="20dp"
                    android:layout_marginLeft="0dp"
                    android:layout_toRightOf="@+id/img"
                    android:scaleType="centerInside"
                    android:src="@drawable/edit"
                    android:layout_marginTop="150dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/re"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/sname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/graduate"
                    android:text="Shop Name"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/locat"
                    android:layout_below="@+id/sname"
                    android:src="@drawable/location"/>


                <TextView
                    android:id="@+id/locatr"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/sname"
                    android:layout_marginLeft="40dp"
                    android:fontFamily="@font/cormorant_unicase_bold"
                    android:gravity="center_vertical"
                    android:text="Location :"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sname"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/locatr"
                    android:fontFamily="@font/andada"
                    android:gravity="center_vertical"
                    android:textAlignment="viewStart"
                    android:textColor="#000" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/location"
                    android:layout_marginTop="30dp"
                    android:id="@+id/per"
                    android:src="@drawable/person"/>

                <TextView
                    android:id="@+id/owne"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/location"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/cormorant_unicase_bold"
                    android:gravity="center_vertical"
                    android:text="Email :"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/owner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/location"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/owne"
                    android:fontFamily="@font/andada"
                    android:gravity="center_vertical"
                    android:textAlignment="viewStart"
                    android:textColor="#000" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/owner"
                    android:id="@+id/gst"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/gst"/>

                <TextView
                    android:id="@+id/gstn"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/owner"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/cormorant_unicase_bold"
                    android:gravity="center_vertical"
                    android:text="GST No :"
                    android:textColor="#000"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/gstno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/owner"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="5dp"

                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/gstn"
                    android:fontFamily="@font/andada"
                    android:gravity="center_vertical"
                    android:textAlignment="viewStart"
                    android:textColor="#000" />


                <TextView
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gstno"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="50dp"
                    android:drawableLeft="@drawable/editp"
                    android:fontFamily="@font/alegreya_sc_black"
                    android:gravity="center_vertical"
                    android:text="    Edit Profile"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </RelativeLayout>


    </ScrollView>





</RelativeLayout>