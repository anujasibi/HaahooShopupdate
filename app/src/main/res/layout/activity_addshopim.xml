<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.haahoo.haahooshop.AddProduct">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <ScrollView
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="Add Shop"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textColor="#fff"
                        android:gravity="center_horizontal|center_vertical"
                        android:background="#5c25b7"
                        />
                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="28dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_arrow_back_black_24dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp" />

                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="20dp"
                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Add Shop Profile Image"
                            android:textSize="18dp"
                            android:id="@+id/imte"
                            android:layout_marginTop="5dp"
                            android:textAlignment="center"/>


                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/cam"
                            android:textColor="#fff"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_below="@+id/imte"
                            android:id="@+id/img"
                            android:scaleType="centerInside"
                            android:layout_height="150dp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="20dp"
                    android:id="@+id/ca"
                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Add Shop Cover Image"
                            android:textSize="18dp"
                            android:id="@+id/im"
                            android:layout_marginTop="5dp"
                            android:textAlignment="center"/>


                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/cam"
                            android:textColor="#fff"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_below="@+id/im"
                            android:id="@+id/imgp"
                            android:scaleType="centerInside"
                            android:layout_height="150dp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>





                <TextView
                            android:id="@+id/save"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="50dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_below="@+id/ca"
                            android:background="#5C25B7"
                            android:gravity="center_vertical"
                            android:text="Continue"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:textSize="18sp" />





                    </LinearLayout>







        </ScrollView>

    </RelativeLayout>

</RelativeLayout>

