<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/re"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Product Manager"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:background="#5C25B7"
                    android:id="@+id/tex"
                    />
                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="28dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp" />



            </RelativeLayout>






            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/re"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_alignParentLeft="true"
                        app:cardCornerRadius="20dp"
                        android:id="@+id/carda"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="20dp"
                        >

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="match_parent"
                                android:id="@+id/im"
                                android:layout_marginTop="20dp"
                               android:scaleType="centerInside"
                                android:src="@drawable/adddfile"
                                android:layout_height="100dp"/>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/im"
                                android:layout_marginTop="0dp"
                                android:fontFamily="@font/pt_serif_caption"
                                android:gravity="center_vertical"
                                android:padding="5dp"
                                android:text="Add Product"
                                android:textAlignment="center"
                                android:textColor="#5C25B7" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_alignParentRight="true"
                        app:cardCornerRadius="20dp"
                        android:id="@+id/cardb"
                        android:layout_below="@+id/carda"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        >

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="match_parent"
                                android:id="@+id/imm"
                                android:layout_marginTop="20dp"
                                android:src="@drawable/visualizati"
                                android:layout_height="100dp"/>



                            <TextView
                                android:layout_width="match_parent"
                                android:textColor="#5c25b7"
                                android:padding="5dp"
                                android:gravity="center_vertical"
                                android:textAlignment="center"
                                android:text="View/Edit Products"
                                android:fontFamily="@font/pt_serif_caption"
                                android:layout_below="@+id/imm"
                                android:layout_marginTop="0dp"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>













                </RelativeLayout>



            </RelativeLayout>




    </ScrollView>










