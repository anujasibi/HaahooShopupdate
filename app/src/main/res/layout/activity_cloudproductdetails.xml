<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.haahoo.haahooshop.profile">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/ree"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="View Product Details"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    android:background="#5c25b7"
                    />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                    android:id="@+id/io"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp" />



            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/re"
                android:layout_below="@+id/ree"
                android:layout_height="wrap_content">



                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="270dp"
                    app:placeholder="@drawable/loading"
                    app:error_image="@drawable/error"
                    app:period="1000"
                    app:delay="0"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="290dp"
                    android:id="@+id/cars"
                    android:layout_marginLeft="30dp"
                    app:cardBackgroundColor="#fff"
                    android:layout_marginRight="30dp"
                    app:cardElevation="50dp"
                    app:cardCornerRadius="30dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textAlignment="center"
                            android:text="Product Name"
                            android:id="@+id/sname"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_marginBottom="20dp"
                            android:textColor="#000"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:text="Description"
                            android:gravity="center_vertical"
                            android:layout_marginStart="40dp"
                            android:layout_marginEnd="40dp"
                            android:layout_marginBottom="30dp"
                            android:layout_below="@+id/sname"
                            android:id="@+id/category"
                            android:textColor="#000"
                            android:layout_height="wrap_content"
                            />


                        <TextView
                            android:layout_width="100dp"
                            android:text="Price :"
                            android:textStyle="bold"
                            android:gravity="center_vertical"
                            android:id="@+id/locat"
                            android:layout_below="@+id/category"
                            android:textColor="#000"
                            android:layout_marginLeft="40dp"
                            android:layout_height="25dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:text="Price"
                            android:textAlignment="viewStart"
                            android:gravity="center_vertical"
                            android:id="@+id/location"
                            android:layout_below="@+id/category"
                            android:layout_toEndOf="@+id/locat"
                            android:textColor="#000"
                            android:layout_height="25dp"
                            android:layout_marginStart="10dp"
                            android:layout_toRightOf="@+id/locat" />


                        <TextView
                            android:layout_width="100dp"
                            android:text="Discount :"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:layout_below="@+id/location"
                            android:layout_marginTop="30dp"
                            android:id="@+id/owne"
                            android:textColor="#000"
                            android:layout_marginLeft="40dp"
                            android:layout_height="25dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:text="Discount"
                            android:gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:layout_below="@+id/location"
                            android:layout_marginTop="30dp"
                            android:id="@+id/owner"
                            android:layout_toEndOf="@+id/owne"
                            android:textColor="#000"
                            android:layout_height="25dp"
                            android:layout_toRightOf="@+id/owne" />



                        <TextView
                            android:layout_width="100dp"
                            android:text="Stock :"
                            android:layout_marginBottom="20dp"
                            android:textStyle="bold"
                            android:gravity="center_vertical"
                            android:layout_below="@+id/owner"
                            android:layout_marginTop="30dp"
                            android:id="@+id/gstn"
                            android:textColor="#000"
                            android:layout_marginLeft="40dp"
                            android:layout_height="25dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:text="Stock"
                            android:layout_marginBottom="20dp"
                            android:gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:layout_below="@+id/owner"
                            android:layout_marginTop="30dp"
                            android:id="@+id/gstno"
                            android:layout_toEndOf="@+id/gstn"
                            android:textColor="#000"
                            android:layout_height="25dp"
                            android:layout_toRightOf="@+id/gstn" />

                    </RelativeLayout>



                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="20dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="#5C25B7"
                    app:cardElevation="5dp"
                    android:layout_below="@+id/cars"
                    android:id="@+id/pending"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Move to Later"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:layout_below="@+id/owner"
                        android:id="@+id/pendingt"
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="#F5F500"
                    app:cardElevation="5dp"
                    android:layout_below="@+id/cars"
                    android:id="@+id/edit"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Edit"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:layout_below="@+id/owner"
                        android:id="@+id/editt"
                        android:textColor="#5C25B7"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>








            </RelativeLayout>


        </RelativeLayout>


    </ScrollView>





</RelativeLayout>