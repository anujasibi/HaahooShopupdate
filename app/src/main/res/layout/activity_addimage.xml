<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.haahoo.haahooshop.MainUI">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/re"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Add Product"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="#5C25B7"
            android:id="@+id/tex"
            />
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="28dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp" />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rt"
        android:layout_below="@+id/re">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content">

        <GridView
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignParentStart="true"
            android:numColumns="2"
            android:verticalSpacing="10dp"
            android:id="@+id/card_view_recycler_list"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true">

        </GridView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/card_view_image"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:src="@drawable/addi"
            android:background="#fff"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            >
        </ImageButton>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Images"
                    android:textAlignment="center"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#5C25B7"
                    android:textStyle="bold"
                    android:layout_below="@+id/card_view_image"
                    android:id="@+id/text"
                    />

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/rt"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="#5c25b7"
        app:cardCornerRadius="20sp"
        app:cardElevation="15sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/save"
            android:gravity="center_horizontal|center_vertical"
            android:text="Save Product"
            android:textColor="#fff"
            android:textSize="20sp" />

    </androidx.cardview.widget.CardView>




</RelativeLayout>